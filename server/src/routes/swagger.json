{
    "swagger": "2.0",
    "info": {
        "description": "ArcadeMania API Documentation",
        "version": "1.0.0",
        "title": "ArcadeMania API"
    },
    "basePath": "/v1",
    "schemes": [
        "http"
    ],
    "paths": {
        "/auth/signup": {
            "post": {
                "tags": [
                    "user"
                ],
                "summary": "Create user",
                "description": "Creates an user for logging in to the application",
                "operationId": "createUser",
                "produces": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "in": "body",
                        "name": "body",
                        "description": "User object",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/User"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "User created successfully to login"
                    },
                    "500": {
                        "description": "User couldn't be created"
                    }
                }
            }
        }
    },
    "definitions": {
        "User": {
            "type": "object",
            "properties": {
                "_id": {
                    "type": "string",
                    "format": "string"
                },
                "name": {
                    "type": "string"
                },
                "email": {
                    "type": "string"
                },
                "password": {
                    "type": "string"
                }
            }
        }
    }
}